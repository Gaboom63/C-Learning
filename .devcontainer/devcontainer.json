{
  "name": "C++ Dev Container",
  "image": "mcr.microsoft.com/devcontainers/cpp:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/cmake:1": {},
    "ghcr.io/devcontainers/features/llvm:1": {},
    "ghcr.io/devcontainers/features/gcc:1": {}
  },
  "extensions": ["ms-vscode.cpptools"],
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "postCreateCommand": "g++ --version"
}
